<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="24dp"
    android:paddingBottom="24dp"
    tools:context=".ui.account.loginPrompt.LoginPrompt">


    <ImageView
        android:id="@+id/login_prompt_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/black" />

    <TextView
        android:id="@+id/not_login_prompt_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/login_prompt_message"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/login_prompt_icon"
        app:layout_constraintStart_toStartOf="@+id/login_prompt_icon"
        app:layout_constraintTop_toBottomOf="@+id/login_prompt_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>
